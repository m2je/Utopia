	<filter>
        <filter-name>struts2</filter-name>
          <filter-class>org.apache.struts2.dispatcher.ng.filter.StrutsPrepareAndExecuteFilter</filter-class> 
        		<init-param>
  			<param-name>actionPackages</param-name>
 			<param-value>ir.utopia</param-value>
		</init-param>   
    </filter>
    
   
	 	
    
  
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

	<error-page>
		<exception-type>
			ir.utopia.core.security.exception.NonAuthorizedActionException
		</exception-type>
		<location>/templates/errorPages/authorizationFail.jsp
		</location>
	</error-page>

	<error-page>
		<exception-type>
			ir.utopia.core.security.exception.NotAuthenticatedException
		</exception-type>
		<location>/pages/security/login.jsp
		</location>
	</error-page>

	<error-page>
		<exception-type>java.lang.Exception	</exception-type>
		<location>/pages/UnderConstruction.jsp</location>
	</error-page>
