<?xml version="1.0" encoding="UTF-8"?>

<!-- The web.xml, also known as the deployment descriptor, defines a Java Servlet web application. 
		 This document is a mandatory element of any web application and must reside within WEB-INF.  The 
		 deployment descriptor defines all the servlets and servlet filters that belong to this web
		 application. -->

<web-app >
	<taglib>
		<taglib-uri>menuTld</taglib-uri>
		<taglib-location>/WEB-INF/tlds/menu.tld
		</taglib-location>
	</taglib>
	<taglib>
		<taglib-uri>Saman</taglib-uri>
		<taglib-location>/WEB-INF/tlds/SamanTags.tld
		</taglib-location>
	</taglib>
	<taglib>
		<taglib-uri>Util</taglib-uri>
		<taglib-location>/WEB-INF/tlds/UtilityTags.tld
		</taglib-location>
	</taglib>

	<display-name>UtopiaUI</display-name>
	
	
