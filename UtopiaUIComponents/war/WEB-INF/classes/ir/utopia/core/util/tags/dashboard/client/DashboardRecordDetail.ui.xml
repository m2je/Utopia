<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:Dashboard='urn:import:ir.utopia.core.util.tags.dashboard.client'>

  <ui:style>
  .detail {
    border: 1px solid #666;
    background-color: white;
  }

  .header {
    background: #eee;
    border-bottom: 1px solid #666;
    padding: 0.5em;
  }

  .headerItem {
    margin-bottom:0.5em;
  }

  .body {
    line-height: 150%;
    padding: 20px 40px 20px 10px;
    font-family: 'Times New Roman', Times, serif;
  }
  </ui:style>

  <g:DockLayoutPanel unit='EM' styleName='{style.detail}'>
   <g:center>
	<g:SplitLayoutPanel>
   		<g:center>
	     <g:ScrollPanel>
	        <g:HorizontalPanel ui:field='body' width="100%"/>
	      </g:ScrollPanel>
	    </g:center>
	    <g:south size='50'  >
	     		 <g:HorizontalPanel ui:field='recordActionPanel' horizontalAlignment="center" verticalAlignment="middle" width="100%" height="100%" />
	    </g:south>
    </g:SplitLayoutPanel>
    </g:center>
  </g:DockLayoutPanel>

</ui:UiBinder>
